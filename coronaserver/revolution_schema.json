{
  "schema_name": "Country Video Games Revolution",
  "schema_description": "Schema for the Revolution Server.",
  "schema_version": "1.0",
  "schema_authors": [
    "TJ Bandrowsky"
  ],
  "classes": [
    {
      "class_name": "comment",
      "class_description": "a people send to each other",
      "base_class_name": "sys_object",
      "fields": {
        "comment_from": "string",
        "comment_to": "string",
        "comment_text": "string"
      }
    },
    {
      "class_name": "actor",
      "class_description": "an item on the board",
      "base_class_name": "sys_object",
      "parents": [ "board" ],
      "fields": {
        "actor_name": "string",
        "actor_type": "string",
        "actor_state": "string",
        "actor_x": "double",
        "actor_y": "double",
        "actor_z": "double",
        "actor_dx": "double",
        "actor_dy": "double",
        "actor_dz": "double"
      }
    },
    {
      "class_name": "actor2d",
      "class_description": "an item on the board",
      "base_class_name": "actor",
      "fields": {
        "actor_description": "string",
        "actor_sprite_sheet": "string",
        "inventory": [ "actor" ]
      }
    },
    {
      "class_name": "player2d",
      "class_description": "an item on the board",
      "base_class_name": "actor2d",
      "fields": {
        "user": "->sys_user",
        "board_id": "->board",
        "selection": [ "actor" ]
      }
    },
    {
      "class_name": "board",
      "class_description": "a board in revolution",
      "base_class_name": "sys_object",
      "parents": [ "game" ],
      "fields": {
        "board_name": "string",
        "board_type": "string",
        "form_name": "string",
        "mechanic": "string",
        "actors": "[ ->actor ]"
      }
    },
    {
      "class_name": "game",
      "class_description": "a board in revolution",
      "base_class_name": "sys_object",
      "fields": {
        "name": "string",
        "description": "string",
        "state": "string",
        "boards": "[ board ]",
        "initial_board": "->board"
      }
    },
    {
      "class_name": "base_game_command",
      "class_description": "command for one piece to activate another",
      "base_class_name": "sys_command",
      "fields": {
        "board_id": "->board",
        "page_id": "->page",
        "actor_id": "->actor"
      }
    },
    {
      "class_name": "select_clear_command",
      "class_description": "command for one piece to activate another",
      "base_class_name": "base_game_command",
      "fields": {
      }
    },
    {
      "class_name": "select_extend_command",
      "class_description": "command for one piece to activate another",
      "base_class_name": "base_game_command",
      "fields": {
        "add_actors": "[ ->actor ]"
      }
    },
    {
      "class_name": "compose_command",
      "class_description": "command to consume selected pieces to create another",
      "base_class_name": "base_game_command",
      "fields": {
        "compose_class_name": "string"
      }
    },
    {
      "class_name": "take_command",
      "class_description": "command to add additional items to inventory",
      "base_class_name": "base_game_command",
      "fields": {
        "take_actors": "[ ->actor ]"
      }
    },
    {
      "class_name": "drop_command",
      "class_description": "command to drop selected pieces in inventory",
      "base_class_name": "base_game_command",
      "fields": {
        "drop_actors": "[ ->actor ]"
      }
    },
    {
      "class_name": "trade_stage",
      "class_description": "command to consume selected pieces to create another",
      "base_class_name": "sys_object",
      "parents": [ "trade_command" ],
      "fields": {
      }
    },
    {
      "class_name": "trade_proposal",
      "class_description": "command to consume selected pieces to create another",
      "base_class_name": "trade_stage",
      "fields": {
        "counterparty": "->actor",
        "duecounterparty": "[ ->actor ]",
        "dueparty": "[ ->actor ]"
      }
    },
    {
      "class_name": "trade_approval",
      "class_description": "command to consume selected pieces to create another",
      "base_class_name": "trade_stage",
      "fields": {
        "approvedparty": "->actor",
        "approvedcounterparty": "->actor",
        "duecounterparty": "[ ->actor ]",
        "dueparty": "[ ->actor ]"
      }
    },
    {
      "class_name": "trade_execute",
      "class_description": "command to consume selected pieces to create another",
      "base_class_name": "trade_stage",
      "fields": {
      }
    },
    {
      "class_name": "trade_command",
      "class_description": "command to consume selected pieces to create another",
      "base_class_name": "base_game_command",
      "fields": {
        "stages": "[->trade_stage]"
      }
    },
    {
      "class_name": "accelerate_command",
      "class_description": "command to move selected pieces",
      "base_class_name": "base_game_command",
      "fields": {
        "target_actor_id": "->actor",
        "ax": "double",
        "ay": "double",
        "az": "double"
      }
    },
    {
      "class_name": "activate_command",
      "class_description": "command for one piece to activate another",
      "base_class_name": "base_game_command",
      "fields": {
        "target_actor_id": "->actor"
      }
    },
    {
      "class_name": "navigate_command",
      "class_description": "",
      "base_class_name": "base_game_command",
      "fields": {
      }
    },
    {
      "class_name": "join_game_command",
      "class_description": "command to join a game",
      "base_class_name": "base_game_command",
      "fields": {
        "game_id": "->game"
      }
    },
    {
      "class_name": "exit_game_command",
      "class_description": "command to leave a game",
      "base_class_name": "base_game_command",
      "fields": {
        "game_id": "->game"
      }
    }

  ],
  "users": [

  ],
  "datasets": [

  ]
}