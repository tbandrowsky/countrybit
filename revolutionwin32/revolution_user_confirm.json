{
  "class_name": "page",
  "page_name": "user_confirm",
  "default": true,
  "children": [
    {
      "class_name": "row",
      "box": {
        "width": "1.0 container",
        "height": "1.0 container"
      },
      "children": [
        {
          "class_name": "absolute",
          "box": {
            "width": "250 pixels",
            "height": "1.0 container"
          },
          "children": [
            {
              "class_name": "chaptertitle",
              "box": {
                "width": "1.0 container",
                "height": "75 pixels",
                "y": "20 pixels"
              },
              "text": " "
            },
            {
              "class_name": "image",
              "box": {
                "width": "150 pixels",
                "height": "200 pixels",
                "y": "20 pixels",
                "x": "40 pixels"
              },
              "image_filename": "cockade.png"
            }
          ]
        },
        {
          "class_name": "column",
          "box": {
            "width": "1.0 remaining",
            "height": "1.0 container"
          },
          "children": [
            {
              "class_name": "chaptertitle",
              "box": {
                "width": "700 pixels",
                "height": "50 pixels",
                "y": "20 pixels"
              },
              "text": "C O N F I R M"
            },
            {
              "class_name": "chaptersubtitle",
              "box": {
                "width": "700 pixels",
                "height": "25 pixels",
                "y": "20 pixels"
              },
              "text": "Enter validation code you've received in your email"
            },
            {
              "class_name": "form",
              "name": "user_confirm_form",
              "box": {
                "width": "700 pixels",
                "height": "250 pixels",
                "y": "60 pixels"
              },
              "model": {
                "name": "user_confirm_form",
                "defaults": {
                  "box": "edit_container_box",
                  "label_box": "edit_label_box",
                  "field_box": "edit_field_box"
                },
                "fields": [
                  {
                    "class_name": "edit",
                    "name": "user_name_ctl",
                    "json_field_name": "user_name",
                    "label_text": "User Name:",
                    "box": "edit_container_box"
                  },
                  {
                    "class_name": "password",
                    "name": "user_validation_code_ctl",
                    "json_field_name": "validation_code",
                    "label_text": "Validation Code:",
                    "box": "edit_container_box"
                  }
                ]
              }
            },
            {
              "class_name": "row",
              "box": {
                "width": "700 pixels",
                "height": "50 pixels"
              },
              "item_next_space": "8 pixels",
              "children": [
                {
                  "class_name": "push_button",
                  "text": "Cancel",
                  "box": "button_box",
                  "on_click": {
                    "class_name": "select_frame",
                    "page_to_select": "home",
                    "frame_to_load": "revolution_home_frame",
                    "frame_contents_page": "login_user",
                    "on_start": {
                      "class_name": "set_property",
                      "control_name": "status_message",
                      "property_name": "text",
                      "value": "Back to login"
                    }
                  }
                },
                {
                  "class_name": "push_button",
                  "text": "Send Code",
                  "box": "button_box",
                  "on_click": {
                    "class_name": "send_user",
                    "form_name": "user_confirm_form",
                    "user_name_field": "user_name",
                    "on_start": {
                      "class_name": "set_property",
                      "control_name": "status_message",
                      "property_name": "text",
                      "value": "Sending Code"
                    },
                    "on_success": {
                      "class_name": "select_frame",
                      "page_to_select": "home",
                      "frame_to_load": "revolution_home_frame",
                      "frame_contents_page": "user_confirm"
                    },
                    "on_fail": {
                      "class_name": "set_property",
                      "control_name": "status_message",
                      "property_name": "text"
                    }
                  }
                },
                {
                  "class_name": "push_button",
                  "text": "Confirm",
                  "box": "button_box",
                  "on_click": {
                    "class_name": "confirm_user",
                    "form_name": "user_confirm_form",
                    "user_name_field": "user_name",
                    "validation_code_field": "validation_code",
                    "on_start": {
                      "class_name": "set_property",
                      "control_name": "status_message",
                      "property_name": "text",
                      "value": "Confirming User"
                    },
                    "on_success": {
                      "class_name": "select_frame",
                      "page_to_select": "home",
                      "frame_to_load": "revolution_home_frame",
                      "frame_contents_page": "revolution_root"
                    },
                    "on_fail": {
                      "class_name": "set_property",
                      "control_name": "status_message",
                      "property_name": "text",
                      "value": "Could not register user"
                    }
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}

