{
  "class_name": "page",
  "page_name": "user_login",
  "default": true,
  "children": [
    {
      "class_name": "row",
      "box": {
        "width": "1.0 container",
        "height": "1.0 container"
      },
        "children": [
            {
                "class_name": "absolute",
                "box": {
                    "width": "150 pixels",
                    "height": "1.0 container"
                },
                "children": [
                    {
                        "class_name": "chaptertitle",
                        "box": {
                            "width": "1.0 container",
                            "height": "75 pixels"
                        },
                        "text": " "
                    },
                    {
                        "class_name": "image",
                        "box": {
                            "width": "75 pixels",
                            "height": "100 pixels",
                            "x": "40 pixels"
                        },
                        "image_filename": "cockade.png"
                    }
                ]
            },
            {
                "class_name": "column",
                "box": {
                    "width": "1.0 remaining",
                    "height": "1.0 container"
                },
                "children": [
                    {
                        "class_name": "chaptertitle",
                        "box": {
                            "width": "1.0 container",
                            "height": "50 pixels"
                        },
                        "text": "L O G I N"
                    },
                    {
                        "class_name": "chaptersubtitle",
                        "box": {
                            "width": "1.0 container",
                            "height": "25 pixels"
                        },
                        "text": "Report for Duty."
                    },
                    {
                        "class_name": "form",
                        "name": "user_login_form",
                        "box": {
                            "width": "1.0 container",
                            "height": "300 pixels",
                            "y": "60 pixels"
                        },
                        "model": {
                            "name": "user_login_model",
                            "defaults": {
                                "box": "edit_container_box",
                                "label_box": "edit_label_box",
                                "field_box": "edit_field_box"
                            },
                            "fields": [
                                {
                                    "class_name": "edit",
                                    "default_focus": true,
                                    "name": "user_name_ctl",
                                    "json_field_name": "user_name",
                                    "label_text": "User Name:",
                                    "box": "edit_container_box"
                                },
                                {
                                    "class_name": "password",
                                    "name": "user_password_ctl",
                                    "json_field_name": "password",
                                    "label_text": "Password:",
                                    "box": "edit_container_box"
                                }
                            ]
                        }
                    },
                    {
                        "class_name": "row",
                        "box": {
                            "width": "1.0 container",
                            "height": "75 pixels"
                        },
                        "item_next_space": "8 pixels",
                        "children": [
                            {
                                "class_name": "push_button",
                                "text": "Login",
                                "box": "button_box",
                                "default_button": true,
                                "icon_path": "login.ico",
                                "on_click": {
                                    "class_name": "login_user",
                                    "form_name": "user_login_form",
                                    "user_name_field": "user_name",
                                    "user_password_field": "password",
                                    "on_start": {
                                        "class_name": "set_property",
                                        "control_name": "status_message",
                                        "property_name": "text",
                                        "value": "Logging in"
                                    },
                                    "on_success": {
                                        "class_name": "select_frame",
                                        "page_to_select": "revolution_home",
                                        "frame_to_load": "revolution_home_frame",
                                        "frame_contents_page": "revolution_root",
                                        "message": "Logged in successfully."
                                    }
                                }
                            },
                            {
                                "class_name": "paragraph",
                                "box": {
                                    "width": "50px",
                                    "height":  "35px"
                                }
                            },
                            {
                                "class_name": "push_button",
                                "text": "Join",
                                "box": "button_box",
                                "on_click": {
                                    "class_name": "select_frame",
                                    "page_to_select": "revolution_home",
                                    "frame_to_load": "revolution_home_frame",
                                    "frame_contents_page": "user_register",
                                    "transition_message" :  "To Enlistment"
                                }
                            },
                            {
                                "class_name": "push_button",
                                "text": "Password",
                                "box": "button_box",
                                "on_click": {
                                    "class_name": "select_frame",
                                    "page_to_select": "revolution_home",
                                    "frame_to_load": "revolution_home_frame",
                                    "frame_contents_page": "user_password",
                                    "transition_message": "To Password"
                                }
                            }
                        ]
                    }
                ]
            }

        ]
    }
  ]
}
